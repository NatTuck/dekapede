
<h1>Main#index</h1>
<p>Find me in app/views/main/index.html.erb</p>

<div class="msgs">
</div>

<div>
  <button id="btn">Click Me!</button>
</div>

<script type="text/javascript">
  var client = new Faye.Client('http://localhost:3000/faye');
  var sub = client.subscribe('/spam', function (msg) {
      $('.msgs').append("<p>" + JSON.stringify(msg) + "</p>");
  });

  $('#btn').click(function () {
      client.publish('/spam', {text: 'Hi there'});
  });
</script>

